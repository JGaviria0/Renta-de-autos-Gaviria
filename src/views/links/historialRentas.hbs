<div class="container p-5">
  <div class="mx-auto text-center">
    <h2 class="text-primary">Historial de Rentas</h1>
  </div>
  <div class="p-5">
    <table class="table table-striped mx-auto">
      {{#if rentas}}
      <thead class="thead-dark text-center">
        <tr>
          <th> Cliente </th>
          <th> Vehículo </th>
          <th> Monto </th>
          <th> Estado </th>
        </tr>
      </thead>
      {{#each rentas}}
      <tbody class="text-center">
        <tr>
          <td>{{firstname}} {{lastname}}</td>
          <td>{{brand}} {{model}}</td>
          <td>{{price}}</td>
          <td>{{status}}</td>
        </tr>
      </tbody>
      {{/each}}
      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>Aún no hay rentas realizadas</p>
        </div>
      </div>
      {{/if}}
    </table>
  </div>
</div>