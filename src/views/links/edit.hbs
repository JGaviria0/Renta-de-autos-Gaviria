<div class="container p-4">
    <div class="mx-auto text-center">
        <h2 class="text-primary">Editar vehículo</h1>
    </div>
    <br>
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card border-primary">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="row">
                            <div class="text-left col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Marca <span class="text-danger"> *</span></label>
                                    <input type="text" name="brand" class="form-control" value={{link.brand}} readonly>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Placa <span class="text-danger"> *</span></label>
                                    <input type="text" name="plate" class="form-control" value={{link.plate}} readonly>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Caja de cambios <span class="text-danger">
                                            *</span></label>
                                    <select class="form-control" name="gearbox" required>
                                        <option name="gearbox" value={{link.fuel}}>{{link.gearbox}}</option>
                                        <option name="gearbox" value="Manual">Manual</option>
                                        <option name="gearbox" value="Automatica">Automática</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">URL Foto <span class="text-danger"> *</span></label>
                                    <input type="text" name="url" class="form-control" value={{link.url}} required>
                                </div>
                            </div>
                            <div class="text-left col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Modelo <span class="text-danger">
                                            *</span></label>
                                    <input type="text" name="model" class="form-control" value={{link.model}} readonly>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Tarjeta propiedad <span class="text-danger">
                                            *</span></label>
                                    <input type="text" name="transit_license" class="form-control"
                                        value={{link.transit_license}} readonly>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Combustible <span class="text-danger">
                                            *</span></label>
                                    <select class="form-control" name="fuel" required>
                                        <option name="fuel" value={{link.fuel}}>{{link.fuel}}</option>
                                        <option name="fuel" value="Gasolina">Gasolina</option>
                                        <option name="fuel" value="Diesel">Diesel</option>
                                        <option name="fuel" value="Diesel">Gas</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label class="form-label">Precio por día <span class="text-danger">
                                            *</span></label>
                                    <input type="number" name="price" class="form-control" value={{link.price}}
                                        required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary btn-block">
                                Editar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>