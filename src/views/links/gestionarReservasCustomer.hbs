<div class="container p-5">
  <div class="mx-auto text-center">
    <h2 class="text-primary">Mis reservas</h1>
  </div>
  <a href="/links/verHistorialReservas" class="btn btn-secondary m-2">Ver historial</a>
  <div class="p-5">
    <table class="table table-striped mx-auto">
      {{#if rentados}}
      <thead class="thead-dark text-center">
        <tr>
          <th> Vehículo </th>
          <th> Fecha inicio </th>
          <th> Fecha fin </th>
          <th> Acción </th>
        </tr>
      </thead>
      {{/if}}
      {{#each rentados}}
      <tbody class="text-center">
        <tr>
          <td>{{id_car}}</td>
          <td>{{start_date}}</td>
          <td>{{end_date}}</td>
          <td>
            <a href="/links/pagarDeposito/{{id}}" class="btn btn-primary"> Pagar depósito </a>
          </td>
        </tr>
      </tbody>
      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>No hay reservas realizadas</p>
        </div>
      </div>
      {{/each}}
    </table>
  </div>
</div>