<div class="container p-5">
  <div class="mx-auto text-center">
    <h2 class="text-primary">Facturas</h1>
  </div>
  <div class="p-5">
    <table class="table table-striped mx-auto">
      {{#if rentados}}
      <thead class="thead-dark text-center">
        <tr>
          <th> Cliente </th>
          <th> Vehículo </th>
          <th> Fecha inicio </th>
          <th> Fecha fin </th>
          <th> Monto </th>
          <th> Estado </th>
          <th> Acción </th>
        </tr>
      </thead>
      {{#each rentados}}
      <tbody class="text-center">
        <tr>
          <td>{{firstname}} {{lastname}}</td>
          <td>{{brand}} {{model}}</td>
          <td>{{timeago2 start_date}}</td>
          <td>{{timeago2 end_date}}</td>
          <td>${{price}}</td>
          <td>{{status}}</td>
          <td>
            <a href="/links/factura/{{id_rent}}" class="btn btn-primary"> Factura </a>
          </td>
        </tr>
      </tbody>
      {{/each}}
      {{else}}
      <div class="col-md-4 mx-auto">
        <div class="card card-body text-center">
          <p>No hay rentas realizadas</p>
        </div>
      </div>
      {{/if}}
    </table>
  </div>
</div>