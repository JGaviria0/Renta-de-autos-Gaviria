<div class="container p-4">
    <div class="col-md-6 mx-auto">
        <h1 class="mx-auto p-2 text-center text-primary"> Mís Vehículos </h1>
    </div>
    <a href="/links/add" class="btn btn-secondary m-2">Registrar vehículo</a>
    <div class="row">
        {{#each links}}
        <div class="col-md-4 p-4">
            <div class="card text-center border-primary">
                <div class="card-body">
                    <img src={{url}} class="img-fluid rounded" />
                    <h4 class="card-title m-2 text-dark">{{brand}} {{model}}</h4>
                    <h5 class="m-2 text-dark"> {{plate}}</h5>
                    <h6 class="m-2 text-dark"> {{price}} por día</h6>

                    <a href="/links/gestionarCarro/{{id}}" class="btn btn-primary m-2">Gestionar</a>
                    <a href="/links/ingresosCarro/{{id}}" class="btn btn-secondary m-2">Utilidades</a>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p> Aún no tienes carros registrados </p>
                <a href="/links/add"> ¡Registra tu carro aquí! </a>
            </div>
        </div>
        {{/each}}
    </div>
</div>